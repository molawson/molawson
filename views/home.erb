<div id="container" class="d-f">
  <div id="intro" class="f-2">
    <h3>Hi, I'm Mo.</h3>
    <div class="profile-pic"></div>
  </div><!-- end intro -->
  <div id="contact" class="f-2">
    <h3>Contact</h3>
    <ul>
      <li>
        <a href="mailto:mo@molawson.com">
          <span class="social_icon email">Email</span>
          <span class="service">Email</span><br />
          <span class="link">mo@molawson.com</span>
        </a>
      </li>
      <li>
        <a href="http://twitter.com/molawson" target="_blank">
          <span class="social_icon twitter">Twitter</span>
          <span class="service">Twitter</span><br />
          <span class="link">twitter.com/molawson</span>
        </a>
      </li>
      <li>
        <a href="http://github.com/molawson" target="_blank">
          <span class="social_icon github">Github</span>
          <span class="service">Github</span><br />
          <span class="link">github.com/molawson</span>
        </a>
      </li>
    </ul>
  </div><!-- end contact -->

  <div id="blog" class="f-3">
    <h3>Blog</h3>
    <% if @posts.length > 0 %>
      <ul id="recent">
        <% @posts.each do |post| %>
          <li>
            <a href="<%= post.url %>"><%= post.title %></a>
            <span class="metadata left"><%= Time.at(post.published_at).strftime('%b %-d') %></span>
            <span class="metadata right"><%= post.read_time %> minute read</span>
          </li>
        <% end %>
      </ul><!-- end recent -->
      <p class="more"><a href="http://blog.molawson.com">More posts &raquo;</a></p>
    <% else %>
      <p>Coming soon.</p>
    <% end %>
  </div><!-- end blog -->
</div><!-- end container -->
