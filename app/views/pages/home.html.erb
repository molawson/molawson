<div id="sidebar">
  <h3>Recent Blog Posts</h3>
  <% if @posts.length > 0 %>
    <ul id="recent">
      <% @posts.each do |post| %>
        <li><%= link_to post.title, blog_post_path(post.slug) %></li>
      <% end %>
    </ul><!-- end recent -->
    <p class="more"><%= link_to 'More posts &raquo;'.html_safe, blog_path %></p>
  <% else %>
    <p>Coming soon.</p>
  <% end %>
</div><!-- end sidebar -->
