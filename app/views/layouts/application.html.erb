<head>
  <meta charset="utf-8">
  
  <title><%= content_for?(:title) ? yield(:title) + " | Mo Lawson" : "Mo Lawson | Ruby on Rails Developer, Dallas, Texas" %></title>
  
  <meta name="description" content="I'm Mo Lawson, a Ruby on Rails developer in Dallas, Texas.  I love using technology and the web to free people up to do what they do best.">
  <meta name="author" content="Mo Lawson">
    
  <%= stylesheet_link_tag "style.min" %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "https://js.stripe.com/v1/" %>
  <%= javascript_tag "Stripe.publishableKey = '#{STRIPE_AUTH['API_KEY']}';"; %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="wrapper">
    <div id="header">
      <h1><%= link_to 'Mo Lawson', root_url %></h1>
    </div><!-- end header -->

    <div id="content">
      
      <%- flash.each do |name, msg| -%>
      	<%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%= yield %>
      
    </div><!-- end content -->
    
    <div id="footer">
      &copy; 2011 Mo Lawson. All rights reserved.
    </div><!-- end footer -->
  </div><!-- end wrapper -->

